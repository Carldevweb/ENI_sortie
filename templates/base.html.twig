<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="icon" href="{{ asset('img/sortirLogo2.PNG') }}">

        <title>{% block title %}Sortie BDE ENI{% endblock %}</title>
    </head>
<body>
        <header>
            {% block nav %}{% include('inc/nav.html.twig') %}{% endblock %}
        </header>

        <main>
            {% block extrastyles %}
                <link rel="stylesheet" href="{{ asset('css/base.css') }}">
                <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
                <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
                <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">
            {%  endblock %}


            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}


            {% block body %}{% endblock %}

            {% block register %}{% endblock %}

            {% block forget %}{% endblock %}

            <!--<div class="mdpForget">

            {% block oublie %}{% endblock %}
            {% block sortie%}{% endblock %}
            </div>-->
        </main>

    <footer>
        <div class="copyright">
        <p>&copy;ENI_sortie{{ 'now'|date('Y') }}</p>
        </div>
    </footer>
</body>
</html>